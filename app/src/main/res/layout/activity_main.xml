<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="davidfoale.info.daniels_images_data.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="565dp"
        android:baselineAligned="false">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/card_recycler_view"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <ScrollView
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:layout_marginTop="115dp"
            android:layout_marginStart="175dp"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:weightSum="1">

                <TextView
                    android:id="@+id/job_desc"
                    android:typeface="sans"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:fontFamily="casual"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.86" />
            </LinearLayout>
        </ScrollView>

        <TextView
            android:text="."
            android:layout_width="185dp"
            android:layout_height="50dp"
            android:id="@+id/salary"
            android:textAppearance="@style/TextAppearance.AppCompat"

            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:fontFamily="casual"
            android:layout_marginEnd="15dp"
            android:typeface="normal"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_above="@+id/Chat"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/imageView2"
            android:layout_alignStart="@+id/degree"
            android:layout_below="@+id/degree" />

        <TextView

            android:layout_width="200dp"
            android:layout_height="65dp"
            android:id="@+id/degree"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:fontFamily="casual"
            android:layout_gravity="center"
            android:typeface="normal"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_alignTop="@+id/job_tips"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/imageView4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/degree"
            android:id="@+id/imageView4"
            android:background="#ededed"
            android:layout_alignTop="@+id/degree"
            android:layout_toEndOf="@+id/job_tips"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="180dp"
            android:layout_height="125dp"
            android:id="@+id/job_tips"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:paddingStart="20dp"
            android:fontFamily="casual"
            android:typeface="serif"
            android:layout_above="@+id/Chat"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_pound_sign"
            android:id="@+id/imageView2"
            android:background="#ededed"
            android:layout_below="@+id/degree"
            android:layout_toEndOf="@+id/job_tips" />

        <Button
            android:text="Watch This space . ."
            android:layout_width="400dp"
            android:layout_height="65dp"
            android:background="#48a8f2"
            android:fontFamily="casual"
            android:typeface="sans"
            android:textSize="17sp"
            android:paddingRight="35dp"
            android:textColor="@color/cardview_light_background"
            android:id="@+id/Chat"
            tools:text="Message others like you"
            android:textAlignment="center"
            android:drawableEnd="@drawable/ic_chat"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="7dp" />

        <TextView
            android:textSize="22sp"
            android:id="@+id/job_title"
            android:textColor="#48a8f2"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/iwanttobea"   />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:id="@+id/qualifications"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="#48a8f2"
            android:paddingTop="20dp"
            android:textStyle="normal|bold|italic"
            android:fontFamily="casual"
            android:typeface="serif"
            android:textSize="16sp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="  I want to be a..."
            android:id="@+id/iwanttobea"
            android:typeface="normal"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textStyle="normal|bold|italic"
            android:textSize="18sp"
            android:fontFamily="casual"
            android:layout_width="165dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/imageView"
            android:layout_marginTop="53dp" />

        <ImageView
            android:layout_width="170dp"
            android:layout_height="170dp"
            app:srcCompat="@mipmap/dadpicture"
            android:id="@+id/imageView"
            android:layout_below="@+id/job_title"
            android:layout_alignEnd="@+id/job_tips" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
